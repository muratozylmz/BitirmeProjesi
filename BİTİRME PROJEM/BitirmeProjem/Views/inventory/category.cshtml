    <style>
        /* Categories page styles */
.dark-theme {
    background-color: #1a1f2c;
    color: #ffffff;
    min-height: 100vh;
    padding: 20px;
}

.header-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.title-wrapper h1 {
    display: flex;
    align-items: center;
    gap: 10px;
    color: #ffffff;
    font-size: 24px;
}

.category-count {
    background-color: #242b3d;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 14px;
    color: #8b92a5;
}

.header-actions {
    display: flex;
    align-items: center;
    gap: 15px;
}

.youtube-link img {
    height: 24px;
}

.blocked-categories {
    display: flex;
    align-items: center;
    gap: 8px;
    background-color: #242b3d;
    color: #ffffff;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    cursor: pointer;
}

.country-selector {
    display: flex;
    align-items: center;
    gap: 8px;
    background-color: #242b3d;
    padding: 8px 16px;
    border-radius: 6px;
}

.country-selector img {
    height: 20px;
}

.search-container {
    display: flex;
    align-items: center;
    background-color: #242b3d;
    border-radius: 8px;
    padding: 8px 16px;
    margin: 20px 0;
}

.search-container input {
    flex: 1;
    background: none;
    border: none;
    color: #ffffff;
    padding: 8px;
}

.search-container input::placeholder {
    color: #8b92a5;
}

.categories-table {
    width: 100%;
    overflow-x: auto;
}

.categories-table table {
    width: 100%;
    border-collapse: collapse;
}

.categories-table th {
    text-align: left;
    padding: 15px;
    color: #8b92a5;
    font-weight: normal;
    border-bottom: 1px solid #242b3d;
}

.sortable {
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 4px;
}

.categories-table td {
    padding: 15px;
    border-bottom: 1px solid #242b3d;
}

.category-link {
    color: #007bff;
    text-decoration: none;
}

.progress-bar {
    background-color: #242b3d;
    height: 4px;
    border-radius: 2px;
    width: 200px;
}

.progress {
    background-color: #007bff;
    height: 100%;
    border-radius: 2px;
}

.profit {
    color: #00c853;
    background-color: rgba(0, 200, 83, 0.1);
    padding: 4px 8px;
    border-radius: 4px;
}

.order-count {
    background-color: #007bff;
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
}

.product-count {
    background-color: #242b3d;
    color: #ffffff;
    padding: 4px 8px;
    border-radius: 4px;
}

.categories-table tr:hover {
    background-color: #242b3d;
}

.material-icons {
    color: #8b92a5;
    cursor: pointer;
}

/* Responsive design */
@media (max-width: 1200px) {
    .header-section {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    .categories-table {
        overflow-x: scroll;
    }
}
    </style>
