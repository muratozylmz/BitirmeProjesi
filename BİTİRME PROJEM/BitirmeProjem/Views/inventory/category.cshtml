@{
    ViewData["Title"] = "Kategoriler";
}

@section Styles {
    <link rel="stylesheet" href="~/css/inventory/category.css">
}

    <!-- Ana İçerik Bölümü -->
    <div class="content-section dark-theme">
        <div class="header-section">
            <div class="title-wrapper">
                <h1>Kategoriler <span class="category-count">27</span></h1>
            </div>
            <div class="header-actions">
                <a href="#" class="youtube-link">
                    <img src="youtube-icon.svg" alt="YouTube">
                </a>
                <button class="blocked-categories">
                    <i class="material-icons">block</i>
                    Engellenen Kategoriler
                </button>
                <div class="country-selector">
                    <img src="uae-flag.svg" alt="UAE flag">
                    <span>U.A.E.</span>
                </div>
            </div>
        </div>

        <div class="search-section">
            <div class="search-container">
                <i class="material-icons">search</i>
                <input type="text" placeholder="Ara: Kategori">
            </div>
        </div>

        <div class="categories-table">
            <table>
                <thead>
                    <tr>
                        <th class="sortable">KATEGORİ <i class="material-icons">unfold_more</i></th>
                        <th>YÜZDELİK DİLİM</th>
                        <th>TAHMİNİ KÂR</th>
                        <th class="sortable">SİPARİŞ <i class="material-icons">unfold_more</i></th>
                        <th class="sortable">ÜRÜN SAYISI <i class="material-icons">unfold_more</i></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a href="#" class="category-link">Home & Kitchen</a></td>
                        <td>
                            <div class="progress-bar">
                                <div class="progress" style="width: 75%"></div>
                            </div>
                        </td>
                        <td><span class="profit">104.47</span></td>
                        <td><span class="order-count">6</span></td>
                        <td><span class="product-count">1,670</span></td>
                        <td><i class="material-icons">more_vert</i></td>
                    </tr>
                    <!-- Diğer kategori satırları benzer şekilde devam eder -->
                </tbody>
            </table>
        </div>
    </div>
@section Scripts {
    <script src="~/js/inventory/category.js"></script>
}