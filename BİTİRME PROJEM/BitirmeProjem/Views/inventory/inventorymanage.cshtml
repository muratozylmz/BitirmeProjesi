@{
    ViewData["Title"] = "Ürün Yönetimi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/inventory/inventorymanage.css">
}
    <!-- Ana İçerik -->


    <main class="dark-theme">
        <div class="content-container">
            <div class="header-section">
                <div class="left-header">
                    <h3>ÜRÜNLER</h3>
                    <h2>Mağazaya Aktarılan <span class="count">4.645</span></h2>
                </div>
                <div class="right-header">
                    <button class="country-btn">
                        <img src="../assets/uae-flag.png" alt="U.A.E.">
                        U.A.E.
                    </button>
                    <button class="delete-btn">
                        <i class="material-icons">delete</i>
                        Toplu Ürün Sil
                    </button>
                    <button class="add-btn">
                        <i class="material-icons">add</i>
                        Yeni Ürün Ekle
                    </button>
                </div>
            </div>

            <nav class="tab-navigation">
                <a href="#" class="active">Mağazaya Aktarılan</a>
                <a href="#">Kriterleri Karşılamayan</a>
                <a href="#">Kuyrukta</a>
                <a href="#">Amazon İzni Gereken</a>
                <a href="#">Onay Bekleyen</a>
            </nav>

            <div class="search-section">
                <div class="search-container">
                    <i class="material-icons">search</i>
                    <input type="text" placeholder="Ara: ASIN, SKU, Ürün adı">
                    <div class="search-buttons">
                        <button class="help-btn"><i class="material-icons">help</i></button>
                        <button class="video-btn"><i class="material-icons">play_circle</i></button>
                    </div>
                </div>
                <div class="action-buttons">
                    <button class="white-btn">Kayıtlı aramalar</button>
                    <button class="white-btn">Detaylı arama</button>
                    <button class="icon-btn"><i class="material-icons">play_circle</i></button>
                    <button class="icon-btn"><i class="material-icons">compare_arrows</i></button>
                    <select class="white-select">
                        <option>Seçili olanlar</option>
                    </select>
                    <select class="white-select">
                        <option>İşlem seçin</option>
                    </select>
                </div>
            </div>

            <table class="products-table">
                <thead>
                    <tr>
                        <th><input type="checkbox"></th>
                        <th>ÜRÜN ADI</th>
                        <th>ASIN</th>
                        <th>FİYAT</th>
                        <th>ADET</th>
                        <th>MARKA</th>
                        <th>GÜNCELLEME</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Ürün satırları buraya gelecek -->
                </tbody>
            </table>
        </div>
    </main>
@section Scripts {
    <script src="~/js/inventory/inventorymanage.js"></script>
}
