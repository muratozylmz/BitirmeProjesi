}

.tab-navigation {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #242b3d;
    margin-bottom: 20px;
    padding-bottom: 10px;
    gap: 20px;
}

.tab-navigation a {
    color: #8b92a5;
    text-decoration: none;
    padding: 8px 0;
    position: relative;
}

.tab-navigation a.active {
    color: #ffffff;
}

.tab-navigation a.active:after {
    content: '';
    position: absolute;
    bottom: -11px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #007bff;
}

.tab-actions {
    margin-left: auto;
    display: flex;
    gap: 10px;
}

.download-btn {
    background-color: #00b8d4;
    color: white;
}

.add-btn {
    background-color: #007bff;
    color: white;
}

.download-btn, .add-btn {
    display: flex;
    align-items: center;
    gap: 5px;
    padding: 8px 16px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
}

.info-box {
    background-color: #242b3d;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    color: #8b92a5;
}

.search-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20px 0;
}

.search-container {
    display: flex;
    align-items: center;
    background-color: #242b3d;
    border-radius: 8px;
    padding: 8px 16px;
    flex: 1;
    margin-right: 20px;
}

.search-container input {
    flex: 1;
    background: none;
    border: none;
    color: #ffffff;
    padding: 8px;
}

.action-buttons {
    display: flex;
    gap: 10px;
}

.select-btn, .process-btn {
    background-color: #242b3d;
    color: #ffffff;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    cursor: pointer;
}

.products-table {
    width: 100%;
}

.products-table table {
    width: 100%;
    border-collapse: collapse;
}

.products-table th {
    text-align: left;
    padding: 15px;
    color: #8b92a5;
    font-weight: normal;
    border-bottom: 1px solid #242b3d;
}

.products-table td {
    padding: 15px;
    border-bottom: 1px solid #242b3d;
}

.product-info {
    display: flex;
    align-items: center;
    gap: 15px;
}

.product-info img {
    width: 40px;
    height: 40px;
    border-radius: 4px;
    object-fit: cover;
}

.product-details {
    display: flex;
    flex-direction: column;
}

.product-name {
    color: #007bff;
}

.product-desc {
    color: #8b92a5;
    font-size: 0.9em;
}

.brand {
    display: flex;
    align-items: center;
    gap: 5px;
}

.brand:before {
    content: '';
    display: inline-block;
    width: 6px;
    height: 6px;
    background-color: #ff4444;
    border-radius: 50%;
}

/* Responsive design */
@media (max-width: 1200px) {
    .tab-navigation {
        flex-wrap: wrap;
    }

