                        <th>MAX. FİYAT</th>
                        <th>H. TIME</th>
                        <th>AKSİYON</th>
                        <th>GÜNCELLEME</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a href="#" class="asin-link">B000NI58L0</a></td>
                        <td>AMZR-ZXCBUQWODJ-...</td>
                        <td>AED426.84</td>
                        <td>7</td>
                        <td>AED397.91</td>
                        <td>AED488.34</td>
                        <td>2</td>
                        <td>READYFORAPPROVAL</td>
                        <td>2 gün önce</td>
                        <td><i class="material-icons">more_vert</i></td>
                    </tr>
                    <!-- Diğer satırlar benzer şekilde devam eder -->
                </tbody>
            </table>
        </div>
    </div>
    </main>
@section Scripts {
    <script src="~/js/inventory/updateHistory.js"></script>
}