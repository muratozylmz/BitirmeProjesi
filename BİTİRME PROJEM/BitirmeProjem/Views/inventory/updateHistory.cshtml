        /* Dark theme styles */
.dark-theme {
    background-color: #1a1f2c;
    color: #ffffff;
    min-height: 100vh;
    padding: 20px;
}

.header-section {
    margin-bottom: 30px;
}

.title-section h3 {
    color: #8b92a5;
    font-size: 14px;
    margin-bottom: 8px;
}

.title-section h1 {
    color: #ffffff;
    font-size: 24px;
    margin-bottom: 20px;
}

.filter-tabs {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
    border-bottom: 1px solid #242b3d;
    padding-bottom: 10px;
}

.filter-tabs a {
    color: #8b92a5;
    text-decoration: none;
    padding: 5px 0;
    position: relative;
}

.filter-tabs a.active {
    color: #ffffff;
}

.filter-tabs a.active:after {
    content: '';
    position: absolute;
    bottom: -11px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #007bff;
}

.info-box {
    background-color: #242b3d;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
}

.info-box p {
    color: #8b92a5;
    margin-bottom: 10px;
}

.info-box .note {
    display: flex;
    align-items: center;
    gap: 8px;
}

.info-box .material-icons {
    font-size: 18px;
    color: #8b92a5;
}

.search-container {
    display: flex;
    align-items: center;
    gap: 10px;
    margin: 20px 0;
}

.search-container input {
    flex: 1;
    padding: 12px;
    border: 1px solid #242b3d;
    border-radius: 8px;
    background-color: #242b3d;
    color: #ffffff;
}

.search-container input::placeholder {
    color: #8b92a5;
}

.detailed-search {
    background-color: #007bff;
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
}

.update-table {
    width: 100%;
    overflow-x: auto;
}

.update-table table {
    width: 100%;
    border-collapse: collapse;
}

.update-table th {
    text-align: left;
    padding: 15px;
    color: #8b92a5;
    font-weight: normal;
    border-bottom: 1px solid #242b3d;
}

.update-table td {
    padding: 15px;
    border-bottom: 1px solid #242b3d;
    color: #ffffff;
}

.asin-link {
    color: #007bff;
    text-decoration: none;
}

.update-table tr:hover {
    background-color: #242b3d;
}

.material-icons {
    cursor: pointer;
    color: #8b92a5;
}

/* Responsive tasarım için */
@media (max-width: 1200px) {
    .update-table {
        overflow-x: scroll;
    }
}
