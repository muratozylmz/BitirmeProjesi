@{
    ViewData["Title"] = "Çok Satan Ürünler";
}

@section Styles {
    <link rel="stylesheet" href="~/css/inventory/bestSelling.css">
}
    <!-- Ana İçerik -->
    <main class="bestsellers-container">
        <div class="page-header">
            <div class="header-left">
                <span class="section-label">ENVANTER</span>
                <h1>Çok Satan Ürünler</h1>
            </div>
            <div class="header-right">
                <select class="period-select">
                    <option>Son 365 Gün</option>
                    <option>Son 30 Gün</option>
                    <option>Son 7 Gün</option>
                </select>
                <div class="country-selector">
                    <img src="../assets/uae-flag.png" alt="UAE flag">
                    <span>U.A.E.</span>
                </div>
                <button class="download-report">
                    <i class="material-icons">download</i>
                    Raporu İndir
                </button>
            </div>
        </div>

        <div class="search-section">
            <div class="search-box">
                <i class="material-icons">search</i>
                <input type="text" placeholder="Ara: ASIN, SKU, Kategori, Marka">
            </div>
        </div>

        <div class="products-table">
            <table>
                <thead>
                    <tr>
                        <th>ÜRÜN ADI</th>
                        <th>ASIN</th>
                        <th>SKU</th>
                        <th>KATEGORİ</th>
                        <th>MARKA</th>
                        <th>ADET</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="product-info">
                                <img src="../assets/product1.jpg" alt="HelloBaby Monitor">
                                <span>HelloBaby Upgrade Baby Monitor, 5" Screen with...</span>
                            </div>
                        </td>
                        <td>B09GM8JZM9</td>
                        <td>AMZR-ZXYUCGYUZX-...</td>
                        <td>Baby Products</td>
                        <td>
                            <div class="brand">
                                <span class="brand-dot hellobaby"></span>
                                Hellobaby
                            </div>
                        </td>
                        <td><span class="quantity">5</span></td>
                        <td>
                            <button class="more-options">
                                <i class="material-icons">more_vert</i>
                            </button>
                        </td>
                    </tr>
                    <!-- Diğer ürün satırları benzer şekilde devam edecek -->
                </tbody>
            </table>
        </div>
    </main>
@section Scripts {
    <script src="~/js/inventory/bestSelling.js"></script>
}