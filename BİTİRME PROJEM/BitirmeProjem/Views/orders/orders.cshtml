@{
    ViewData["Title"] = "Siparişler";
}

@section Styles {
    <link rel="stylesheet" href="~/css/orders/orders.css">
}

    <!-- Ana İçerik -->
    <main>
        <header>
            <div class="dashboard-container">
                <div class="section-header">
                    <h2>GENEL BAKIŞ</h2>
                    <div class="header-controls">
                        <select class="period-select">
                            <option>Son 365 Gün</option>
                            <option>Son 30 Gün</option>
                            <option>Son 7 Gün</option>
                        </select>
                        <select class="country-select">
                            <option>U.A.E.</option>
                            <option>USA</option>
                        </select>
                    </div>
                </div>
            </div>
        </header>

        <!-- Sipariş Durumları -->
        <!-- Sipariş durumları ve tablo yapısı -->
        <div class="order-status-container">
            <div class="status-links">
                <a href="#" class="status-link active">Tümü <span class="count">33</span></a>
                <a href="#" class="status-link">Sold <span class="count">0</span></a>
                <a href="#" class="status-link">Placed <span class="count">5</span></a>
                <a href="#" class="status-link">Confirmed <span class="count">10</span></a>
                <a href="#" class="status-link">PreConfirmed <span class="count">0</span></a>
                <a href="#" class="status-link">Delivered <span class="count">0</span></a>
                <a href="#" class="status-link">Daha Fazla Seçenek</a>
            </div>

            <div class="info-message">
                <p>Amazon mağazanız düzenli aralıklarla kontrol edilir ve <span class="unshipped">Unshipped</span> durumundaki siparişler buraya <span class="sold">Sold</span> etiketiyle aktarılır. Chrome eklentisini kullanarak siparişinizi tamamladığınızda, tam otomatik sistemimiz sayesinde çoğu zaman herhangi bir ek işlem yapmanız gerekmez.</p>
            </div>

            <!-- Arama Bölümü -->
            <div class="search-section">
                <!-- Basit Arama Çubuğu -->
                <div class="search-bar">
                    <i class="material-icons search-icon">search</i>
                    <input type="search" placeholder="Ara: ASIN, SKU, Sipariş Numarası" class="search-input">
                    <button class="detailed-search-toggle" onclick="toggleDetailedSearch()">
                        Detaylı arama
                        <i class="material-icons toggle-icon">expand_more</i>
                    </button>
                </div>

                <!-- Detaylı Arama Formu -->
                <div class="detailed-search-form" id="detailedSearchForm">
                    <div class="search-grid">
                        <div class="search-column">
                            <div class="form-group">
                                <label>Fiyat</label>
                                <div class="range-inputs">
                                    <input type="text" placeholder="Min." class="min-input">
                                    <input type="text" placeholder="Maks." class="max-input">
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Alıcı adı</label>
                                <input type="text" placeholder="Alıcı adı" class="full-input">
                            </div>

                            <div class="form-group">
                                <label>Kâr miktarı</label>
                                <div class="range-inputs">
                                    <input type="text" placeholder="Min." class="min-input">
                                    <input type="text" placeholder="Maks." class="max-input">
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Kâr Oranı %</label>
                                <div class="range-inputs">
                                    <input type="text" placeholder="Min." class="min-input">
                                    <input type="text" placeholder="Maks." class="max-input">
                                </div>
                            </div>
                        </div>

                        <div class="search-column">
                            <div class="form-group">
                                <label>Bayrak</label>
                                <select class="full-input">
                                    <option>Seçiniz</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Durum</label>
                                <select class="full-input">
                                    <option>Seçiniz</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Tarih</label>
                                <select class="full-input">
                                    <option>Listeden seçin</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Teslim tarihi</label>
                                <div class="range-inputs">
                                    <input type="text" placeholder="Min." class="min-input">
                                    <input type="text" placeholder="Maks." class="max-input">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="checkbox-options">
                        <label class="checkbox-label">
                            <input type="checkbox">
                            <span>Alıcı sipariş numarası olmayan siparişler</span>
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox">
                            <span>Sadece hızlı kargo siparişleri</span>
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox">
                            <span>SellerRunning House'a gönderilmeyen siparişler</span>
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox">
                            <span>Takip numarası olmayan siparişler</span>
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox">
                            <span>Amazon tarafından ödemesi reddedilen siparişler</span>
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox">
                            <span>Manuel tamamlanan siparişler</span>
                            <select class="inline-select">
                                <option>Seçiniz</option>
                            </select>
                        </label>
                    </div>

                    <div class="search-buttons">
                        <button class="btn-cancel">Vazgeç</button>
                        <button class="btn-search">Ara</button>
                    </div>
                </div>
            </div>

            <table class="orders-table">
                <thead>
                    <tr>
                        <th>SİPARİŞ NO</th>
                        <th>DURUM</th>
                        <th>FİYAT</th>
                        <th>KÂR</th>
                        <th>KÂR%</th>
                        <th>TARİH</th>
                        <th>SİPARİŞ VER</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="order-number">171-7490084-2923522</td>
                        <td><span class="status refunded">Refunded</span></td>
                        <td>159.32</td>
                        <td class="strikethrough">12.33</td>
                        <td>10%</td>
                        <td>16 gün önce</td>
                        <td><span class="completed">Tamamlandı</span></td>
                        <td><button class="more-options">⋮</button></td>
                    </tr>
                    <!-- Diğer sipariş satırları benzer şekilde devam eder -->
                </tbody>
            </table>
        </div>
    </main>
<script>
    function toggleDetailedSearch() {
        const form = document.getElementById('detailedSearchForm');
        const toggleIcon = document.querySelector('.toggle-icon');

        if (form.style.display === 'none' || !form.style.display) {
            form.style.display = 'block';
            toggleIcon.classList.add('active');
        } else {
            form.style.display = 'none';
            toggleIcon.classList.remove('active');
        }
    }
</script>
@section Scripts {
    <script src="~/js/orders/orders.js"></script>
}