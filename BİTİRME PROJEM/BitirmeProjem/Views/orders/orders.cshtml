        /* Koyu tema renkleri */
        :root {
            --bg-dark: #0d1117;
            --text-primary: #c9d1d9;
            --text-secondary: #8b949e;
            --link-color: #58a6ff;
            --border-color: #30363d;
            --status-bg: #238636;
        }

        /* Genel stil */
        body {
            background-color: var(--bg-dark);
            color: var(--text-primary);
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        }

        /* Sipariş durumları linkleri */
        .status-links {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .status-link {
            color: var(--text-primary);
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
        }

            .status-link.active {
                background-color: #1f6feb;
            }

            .status-link .count {
                background-color: var(--border-color);
                padding: 0.2rem 0.6rem;
                border-radius: 1rem;
                margin-left: 0.5rem;
                font-size: 0.9em;
            }

        /* Bilgi mesajı */
        .info-message {
            background-color: rgba(56, 139, 253, 0.1);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            padding: 1rem;
            margin: 1rem 0;
        }

        .unshipped, .sold {
            color: var(--link-color);
        }

        /* Arama kutusu */
        /* Arama Bölümü Stilleri */
        .search-section {
            margin: 1rem 0;
        }

        .search-bar {
            display: flex;
            align-items: center;
            padding: 0.5rem;
            background-color: var(--bg-dark);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            flex: 1; /* Bu satırı ekleyin */
            min-width: 500px; /* Bu satırı ekleyin */
        }

        .search-icon {
            color: var(--text-secondary);
            margin: 0 0.5rem;
        }

        .search-input {
            flex: 1;
            background: transparent;
            border: none;
            color: var(--text-primary);
            padding: 0.5rem;
            font-size: 0.9rem;
            min-width: 450px;
        }

            .search-input:focus {
                outline: none;
            }

        .detailed-search-toggle {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: transparent;
            border: none;
            color: var(--link-color);
            cursor: pointer;
            padding: 0.5rem 1rem;
        }

        .toggle-icon {
            transition: transform 0.2s;
        }

            .toggle-icon.active {
                transform: rotate(180deg);
            }

        /* Detaylı Arama Form Stilleri */
        .detailed-search-form {
            display: none;
            background-color: var(--bg-dark);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            margin-top: 1rem;
            padding: 1.5rem;
        }

        .search-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 1.5rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

            .form-group label {
                display: block;
                color: var(--text-primary);
                margin-bottom: 0.5rem;
            }

        .range-inputs {
            display: flex;
            gap: 0.5rem;
        }

        .min-input, .max-input {
            flex: 1;
            background-color: var(--bg-dark);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            padding: 0.5rem;
            border-radius: 4px;
        }

        .full-input {
            width: 100%;
            background-color: var(--bg-dark);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            padding: 0.5rem;
            border-radius: 4px;
        }

        .checkbox-options {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-primary);
        }

        .inline-select {
            margin-left: 0.5rem;
            background-color: var(--bg-dark);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
        }

        .search-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }

        .btn-cancel {
            background: transparent;
            color: var(--link-color);
            border: none;
            padding: 0.5rem 1rem;
            cursor: pointer;
        }

        .btn-search {
            background-color: var(--link-color);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
        }

        /* Tablo stilleri */
        .orders-table {
            width: 100%;
            border-collapse: collapse;
        }

            .orders-table th {
                text-align: left;
                padding: 1rem;
                border-bottom: 1px solid var(--border-color);
                color: var(--text-secondary);
            }

            .orders-table td {
                padding: 1rem;
                border-bottom: 1px solid var(--border-color);
            }

        .order-number {
            color: var(--link-color);
        }

        .status.refunded {
            background-color: #238636;
            color: white;
            padding: 0.2rem 0.6rem;
            border-radius: 1rem;
            font-size: 0.9em;
        }

        .strikethrough {
            text-decoration: line-through;
            color: var(--text-secondary);
        }

        .completed {
            color: var(--text-secondary);
        }

        .more-options {
            background: none;
            border: none;
            color: var(--text-secondary);
            cursor: pointer;
            font-size: 1.2em;
        }
    </style>
</head>
