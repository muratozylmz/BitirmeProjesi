        /* All Stores Report Page Styles */
.dark-theme {
    background-color: #1a1f2c;
    color: #ffffff;
    min-height: 100vh;
    padding: 20px;
}

.header-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.title-category {
    color: #8b92a5;
    font-size: 14px;
    margin-bottom: 8px;
}

.header-actions {
    display: flex;
    align-items: center;
    gap: 15px;
}

.date-picker {
    display: flex;
    align-items: center;
    gap: 8px;
    background-color: #242b3d;
    padding: 8px 16px;
    border-radius: 6px;
    cursor: pointer;
}

.info-box {
    background-color: #242b3d;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    color: #8b92a5;
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 20px;
}

.additional-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 20px;
}

.stat-card {
    background-color: #242b3d;
    padding: 20px;
    border-radius: 8px;
    position: relative;
}

.stat-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 15px;
}

.stat-title {
    color: #8b92a5;
    font-size: 12px;
    text-transform: uppercase;
}

.currency-icon {
    color: #8b92a5;
    font-size: 14px;
}

.stat-value {
    font-size: 24px;
    font-weight: bold;
    color: #ffffff;
}

/* Progress Bar */
.progress-bar {
    background-color: #242b3d;
    border-radius: 4px;
    height: 8px;
    margin-top: 10px;
}

.progress {
    background-color: #007bff;
    height: 100%;
    border-radius: 4px;
}

/* Chart Section */
.chart-section {
    background-color: #242b3d;
    padding: 20px;
    border-radius: 8px;
    margin-top: 20px;
}

.chart-section h2 {
    color: #ffffff;
    font-size: 16px;
    margin-bottom: 20px;
}

.chart-container {
    width: 100%;
    height: 300px;
    /* Chart specific styles will be added here */
}

/* Responsive Design */
@media (max-width: 1200px) {
    .header-section {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .additional-stats {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .stats-grid {
        grid-template-columns: 1fr;
    }

    .header-actions {
        flex-direction: column;
        width: 100%;
    }

    .date-picker {
        width: 100%;
    }
}
    </style>
