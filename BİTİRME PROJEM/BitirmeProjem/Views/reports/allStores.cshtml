@{
    ViewData["Title"] = "Tüm Mağazalar";
}

@section Styles {
    <link rel="stylesheet" href="~/css/reports/allStores.css">
}

    <div class="content-section dark-theme">
        <!-- Page Header -->
        <div class="header-section">
            <div class="title-area">
                <div class="title-category">RAPORLAR</div>
                <h1>Tüm Mağazalar Raporu</h1>
            </div>
            <div class="header-actions">
                <div class="date-picker">
                    <i class="material-icons">calendar_today</i>
                    <span>Aralık 21, 2024 - Ocak 21, 2025</span>
                    <i class="material-icons">arrow_drop_down</i>
                </div>
                <a href="#" class="youtube-link">
                    <img src="youtube-icon.svg" alt="YouTube">
                </a>
                <div class="country-selector">
                    <img src="usd-flag.svg" alt="USD flag">
                    <span>USD - US</span>
                    <i class="material-icons">arrow_drop_down</i>
                </div>
            </div>
        </div>

        <!-- Info Box -->
        <div class="info-box">
            <p>Tahmini kâr hesaplaması SellerRunning kullanmaya başladığınızdan itibaren gerçekleşen siparişler için yapılır. Confirm olmamış siparişleriniz kârınıza dahil edilmez.</p>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <!-- Ürün Satışları -->
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">ÜRÜN SATIŞLARI</span>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">US697.53</div>
            </div>

            <!-- Amazon'dan Gelecek Miktar -->
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">AMAZON'DAN GELECEK MİKTAR</span>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">US-323.86</div>
            </div>

            <!-- Toplam Kâr -->
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">TOPLAM KÂR</span>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">US107.38</div>
            </div>

            <!-- Mağazaya Aktarılan -->
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">MAĞAZAYA AKTARILAN</span>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">4.645</div>
            </div>
        </div>

        <!-- Additional Stats -->
        <div class="additional-stats">
            <!-- Teslim Edilen Sipariş Kâr -->
            <div class="stat-card wide">
                <div class="stat-header">
                    <span class="stat-title">TESLİM EDİLEN SİPARİŞ KÂR</span>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">US0.00</div>
            </div>

            <!-- Toplam Sipariş Sayısı -->
            <div class="stat-card wide">
                <div class="stat-header">
                    <span class="stat-title">TOPLAM SİPARİŞ SAYISI</span>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">8</div>
            </div>

            <!-- Ortalama Sipariş Maliyeti -->
            <div class="stat-card wide">
                <div class="stat-header">
                    <span class="stat-title">ORTALAMA SİPARİŞ MALİYETİ</span>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">US61.53</div>
            </div>

            <!-- Sipariş Tamamlandı -->
            <div class="stat-card wide">
                <div class="stat-header">
                    <span class="stat-title">SİPARİŞ TAMAMLANDI</span>
                </div>
                <div class="stat-value">
                    <div class="progress-bar">
                        <div class="progress" style="width: 75%;"></div>
                    </div>
                    <span>75.00%</span>
                </div>
            </div>
        </div>

        <!-- Chart Section -->
        <div class="chart-section">
            <h2>Sipariş Geçmişi (USD)</h2>
            <div class="chart-container">
                <!-- Chart will be rendered here -->
            </div>
        </div>
    </div>
@section Scripts {
    <script src="~/js/reports/allStores.js"></script>
}