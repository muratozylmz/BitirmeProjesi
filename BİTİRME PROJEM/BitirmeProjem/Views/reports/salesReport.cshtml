@{
    ViewData["Title"] = "Satış Raporu";
}

@section Styles {
    <link rel="stylesheet" href="~/css/reports/salesReport.css">
}



    <div class="content-section dark-theme">
        <!-- Page Header -->
        <div class="header-section">
            <div class="title-area">
                <div class="title-category">RAPORLAR</div>
                <div class="title-wrapper">
                    <h1>Satış Raporu <span class="count-badge">20</span></h1>
                </div>
            </div>
            <div class="header-actions">
                <div class="date-picker">
                    <i class="material-icons">calendar_today</i>
                    <span>Aralık 21, 2024 - Ocak 21, 2025</span>
                    <i class="material-icons">arrow_drop_down</i>
                </div>
                <a href="#" class="youtube-link">
                    <img src="youtube-icon.svg" alt="YouTube">
                </a>
                <div class="country-selector">
                    <img src="uae-flag.svg" alt="UAE flag">
                    <span>U.A.E.</span>
                    <i class="material-icons">arrow_drop_down</i>
                </div>
            </div>
        </div>

        <!-- Tab Navigation -->
        <div class="tab-navigation">
            <div class="tab-links">
                <a href="#" class="active">Tümü</a>
                <div class="dropdown">
                    <button class="dropdown-btn">
                        Daha Fazla Seçenek
                        <i class="material-icons">arrow_drop_down</i>
                    </button>
                </div>
            </div>
            <button class="download-btn">
                <i class="material-icons">download</i>
                Raporu İndir
            </button>
        </div>

        <!-- Info Box -->
        <div class="info-box">
            <p>Satış Raporu sayfası üzerinde siparişlerinizle ilgili ayrıntıları görüntüleyebilir ve bu bilgileri "Raporu indir" seçeneğini kullanarak indirebilirsiniz.</p>
        </div>

        <!-- Search Section -->
        <div class="search-container">
            <i class="material-icons">search</i>
            <input type="text" placeholder="Ara: ASIN, SKU, Sipariş Numarası">
        </div>

        <!-- Sales Table -->
        <div class="sales-table">
            <table>
                <thead>
                    <tr>
                        <th>SİPARİŞ NO</th>
                        <th>ALICI SİPARİŞ NO</th>
                        <th>DURUM</th>
                        <th>FİYAT</th>
                        <th>KÂR</th>
                        <th>KÂR%</th>
                        <th>FEE</th>
                        <th>TARİH</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a href="#" class="order-link">171-7490084-2923522</a></td>
                        <td>...</td>
                        <td><span class="status-badge refunded">Refunded</span></td>
                        <td>AED159.32</td>
                        <td class="strikethrough">AED12.33</td>
                        <td class="strikethrough">10%</td>
                        <td class="strikethrough">AED23.90</td>
                        <td>16 gün önce</td>
                        <td><i class="material-icons">more_vert</i></td>
                    </tr>
                    <!-- Diğer satırlar benzer yapıda -->
                </tbody>
            </table>
        </div>
    </div>
@section Scripts {
    <script src="~/js/reports/salesReport.js"></script>
}