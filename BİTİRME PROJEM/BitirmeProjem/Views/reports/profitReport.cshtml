@{
    ViewData["Title"] = "Kâr Raporu";
}

@section Styles {
    <link rel="stylesheet" href="~/css/reports/profitReport.css">
}



    <div class="content-section dark-theme">
        <!-- Page Header -->
        <div class="header-section">
            <div class="title-area">
                <div class="title-category">RAPORLAR</div>
                <h1>Kâr Raporu</h1>
            </div>
            <div class="header-actions">
                <div class="date-picker">
                    <i class="material-icons">calendar_today</i>
                    <span>Aralık 21, 2024 - Ocak 21, 2025</span>
                    <i class="material-icons">arrow_drop_down</i>
                </div>
                <a href="#" class="youtube-link">
                    <img src="youtube-icon.svg" alt="YouTube">
                </a>
                <div class="country-selector">
                    <img src="uae-flag.svg" alt="UAE flag">
                    <span>U.A.E.</span>
                    <i class="material-icons">arrow_drop_down</i>
                </div>
            </div>
        </div>

        <!-- Info Box -->
        <div class="info-box">
            <p>Tahmini kâr hesaplaması SellerRunning kullanmaya başladığınızdan itibaren gerçekleşen siparişler için yapılır. Confirm olmamış siparişleriniz kârınıza dahil edilmez.</p>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <!-- Ürün Satışları -->
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">ÜRÜN SATIŞLARI</span>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">AED2.559.94</div>
            </div>

            <!-- Toplam Kâr -->
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">TOPLAM KÂR</span>
                    <i class="material-icons info-icon">info</i>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">AED394.09</div>
            </div>

            <!-- Teslim Edilen Sipariş Kâr -->
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">TESLİM EDİLEN SİPARİŞ KÂR</span>
                    <i class="material-icons info-icon">info</i>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">AED0.00</div>
            </div>

            <!-- Sipariş Ortalama Kâr -->
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">SİPARİŞ ORTALAMA KÂR</span>
                    <i class="material-icons info-icon">info</i>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">AED49.26</div>
            </div>
        </div>

        <!-- Cost Stats -->
        <div class="cost-stats">
            <!-- Toplam Maliyet -->
            <div class="stat-card wide">
                <div class="stat-header">
                    <span class="stat-title">TOPLAM MALİYET</span>
                    <i class="material-icons info-icon">info</i>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">AED1.806.63</div>
            </div>

            <!-- Ortalama Sipariş Maliyeti -->
            <div class="stat-card wide">
                <div class="stat-header">
                    <span class="stat-title">ORTALAMA SİPARİŞ MALİYETİ</span>
                    <i class="material-icons info-icon">info</i>
                    <span class="currency-icon">$</span>
                </div>
                <div class="stat-value">AED225.83</div>
            </div>
        </div>

        <!-- Chart Section -->
        <div class="chart-section">
            <h2>Sipariş Geçmişi (AED)</h2>
            <div class="chart-container">
                <!-- Chart will be rendered here -->
            </div>
        </div>
    </div>
@section Scripts {
    <script src="~/js/reports/profitReport.js"></script>
}