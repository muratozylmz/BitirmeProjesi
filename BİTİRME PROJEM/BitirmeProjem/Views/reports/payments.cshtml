@{
    ViewData["Title"] = "Ödemeler";
}

@section Styles {
    <link rel="stylesheet" href="~/css/reports/payments.css">
}



    <div class="content-section dark-theme">
        <!-- Page Header -->
        <div class="header-section">
            <div class="title-area">
                <h1>Gelen Ödemeler</h1>
            </div>
            <div class="header-actions">
                <a href="#" class="youtube-link">
                    <img src="youtube-icon.svg" alt="YouTube">
                </a>
                <div class="country-selector">
                    <img src="uae-flag.svg" alt="UAE flag">
                    <span>U.A.E.</span>
                    <i class="material-icons">arrow_drop_down</i>
                </div>
            </div>
        </div>

        <!-- Info Box -->
        <div class="info-box">
            <p>Bu sayfadaki veriler Amazon'un banka hesaplarınıza yaptığı ödemeleri yansıtır.</p>
        </div>

        <!-- Payments Table -->
        <div class="payments-table">
            <table>
                <thead>
                    <tr>
                        <th>ORİJİNAL</th>
                        <th>DÖNÜŞTÜRÜLMÜŞ</th>
                        <th>DURUM</th>
                        <th>TRANSFER</th>
                        <th>BANKA</th>
                        <th>TRACE ID</th>
                        <th>TARİH</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>0.00 AED</td>
                        <td>0.00 AED</td>
                        <td><span class="status open">Open</span></td>
                        <td>...</td>
                        <td>...</td>
                        <td>...</td>
                        <td>...</td>
                    </tr>
                    <tr>
                        <td>-1247.79 AED</td>
                        <td>-1247.79 AED</td>
                        <td><span class="status open">Open</span></td>
                        <td>...</td>
                        <td>...</td>
                        <td>...</td>
                        <td>...</td>
                    </tr>
                    <tr>
                        <td>-15.00 AED</td>
                        <td>-15.00 AED</td>
                        <td><span class="status open">Open</span></td>
                        <td>...</td>
                        <td>...</td>
                        <td>...</td>
                        <td>...</td>
                    </tr>
                    <tr>
                        <td>74.23 AED</td>
                        <td>74.23 AED</td>
                        <td><span class="status open">Open</span></td>
                        <td>...</td>
                        <td>...</td>
                        <td>...</td>
                        <td>...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
@section Scripts {
    <script src="~/js/reports/payments.js"></script>
}