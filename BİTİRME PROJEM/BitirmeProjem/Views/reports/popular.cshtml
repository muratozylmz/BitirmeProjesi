@{
    ViewData["Title"] = "En Popüler";
}

@section Styles {
    <link rel="stylesheet" href="~/css/reports/populer.css">
}



    <div class="content-section dark-theme">
        <!-- Page Header -->
        <div class="header-section">
            <div class="title-area">
                <h1>Popüler Zamanlar</h1>
            </div>
            <div class="header-actions">
                <a href="#" class="youtube-link">
                    <img src="youtube-icon.svg" alt="YouTube">
                </a>
                <div class="country-selector">
                    <img src="uae-flag.svg" alt="UAE flag">
                    <span>U.A.E.</span>
                    <i class="material-icons">arrow_drop_down</i>
                </div>
            </div>
        </div>

        <!-- Info Box -->
        <div class="info-box">
            <p> Saat dilimlerine göre ne sıklıkta sipariş aldığınızı görebilirsiniz. Tüm siparişlerinizi izinden hesaplanmıştır.</p>
        </div>

        <!-- Chart Section -->
        <div class="chart-section">
            <h2>U.A.E. mağazanızın sipariş yoğunluk saatleri (UTC -8, Los Angeles, California)</h2>
            <div class="chart-container">
                <!-- Chart will be rendered here -->
                <canvas id="popular-times-chart"></canvas>
            </div>
        </div>
    </div>
@section Scripts {
    <script src="~/js/reports/popular.js"></script>
}