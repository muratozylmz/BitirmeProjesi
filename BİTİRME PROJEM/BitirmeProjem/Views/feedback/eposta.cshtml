@{
    ViewData["Title"] = "Gönderilen E-Postalar";
}

@section Styles {
    <link rel="stylesheet" href="~/css/feedback/eposta.css">
}

<div class="content-section dark-theme">
    <!-- Page Header -->
    <div class="header-section">
        <div class="title-area">
            <h1>Gönderilen E-Postalar <span class="email-count">0</span></h1>
        </div>
        <div class="header-actions">
            <a href="#" class="youtube-link">
                <img src="youtube-icon.svg" alt="YouTube">
            </a>
            <div class="country-selector">
                <img src="uae-flag.svg" alt="UAE flag">
                <span>U.A.E.</span>
                <i class="material-icons">arrow_drop_down</i>
            </div>
        </div>
    </div>

    <!-- Info Box -->
    <div class="info-box">
        <p>Müşterilerinize gönderdiğiniz feedback e-postalarını buradan görüntüleyebilir ve inceleyebilirsiniz.</p>
    </div>

    <!-- Search Section -->
    <div class="search-container">
        <i class="material-icons">search</i>
        <input type="text" placeholder="Ara: Sipariş no, Alıcı">
    </div>

    <!-- Emails Table -->
    <div class="emails-table">
        <table>
            <thead>
                <tr>
                    <th>SİPARİŞ NO</th>
                    <th>ALICI</th>
                    <th>KAMPANYA</th>
                    <th>AKSİYON</th>
                    <th>GÖNDERİLDİ</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="5">Gösterilecek e-posta yok.</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/feedback/eposta.js"></script>
}
